<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alarm.SettingAlarmDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundstyle3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="시간과 요일을 선택해주세요."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TimePicker
            android:id="@+id/timepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:timePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/week"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timepicker">

            <View
                android:id="@+id/view0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.01" />

            <ToggleButton
                android:id="@+id/sunday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:textOff="일"
                android:textOn="일"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/view0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

            <ToggleButton
                android:id="@+id/monday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textOff="월"
                android:textOn="월"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/sunday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

            <ToggleButton
                android:id="@+id/tuesday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textOff="화"
                android:textOn="화"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/monday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

            <ToggleButton
                android:id="@+id/wednesday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textOff="수"
                android:textOn="수"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tuesday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

            <ToggleButton
                android:id="@+id/thursday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textOff="목"
                android:textOn="목"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/wednesday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

            <ToggleButton
                android:id="@+id/friday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textOff="금"
                android:textOn="금"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/thursday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

            <ToggleButton
                android:id="@+id/saturday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textOff="토"
                android:textOn="토"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/friday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/week">

            <Button
                android:id="@+id/saveAlarm"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="저장"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view01"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view01"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/exist"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view01"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>